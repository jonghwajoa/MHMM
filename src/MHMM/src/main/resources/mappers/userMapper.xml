<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.mhmm.mappers.userMapper">

	<select id="findExistByEmail" resultType="string">
		select email from
		tbl_user where email = #{email}
	</select>

	<insert id="create" useGeneratedKeys="true" keyProperty="no"
		parameterType="UserDTO">
		insert into tbl_user (name,email) values ( #{name},
		#{email} )
	</insert>

	<update id="updateToName">
		update tbl_user set name= #{name} where no = #{no}
	</update>

	<update id="updateToEmail">
		update tbl_user set email= #{email} where no = #{no}
	</update>

	<delete id="delete">
		delete from tbl_user where no = #{no}
	</delete>

</mapper>
